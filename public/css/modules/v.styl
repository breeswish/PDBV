body
  margin: 0
  overflow: hidden

body, html
  width: 100%
  height: 100%

.status
  position: fixed
  left: 0
  top: 0
  width: 100%
  height: 100%
  background: rgba(#FFF, 0.9)
  z-index: 999

.status-text
  line-height: 30px
  position: absolute
  left: 0
  top: 50%
  margin-top: -15px
  width: 100%
  height: 30px
  text-align: center
  color: #000
  font-size: 20px

.form__line
  margin: 15px 0

form label
  font-size: 13px

.textbox
  font-size: 13px
  background: transparent
  border: 1px solid rgba(#FFF, 0.15)
  padding: 3px 5px
  width: 200px
  outline: 0

  &:focus
    border: 1px solid rgba(#FFF, 0.5)
    outline: 4px solid rgba($primary-color, 0.2)

.btn
  border-radius: 0px
  padding: 5px 20px
  font-size: 13px
  text-decoration: none
  color: #fff
  position: relative
  display: inline-block
  border: 0
  outline: 0
  background: #000
  border-bottom: 2px solid desaturate($primary-color, 50%)

  &:hover
    background: mix(#000, $primary-color, 80%)
    border-color: saturate($primary-color, 80%)
  
  &:active
    border-color: #000
    background: #000